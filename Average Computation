using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Average
{
    public partial class Form1 : Form
    {
        private string[] seperate;
        private int[] numbers;
        private int sum = 0;
        private int average;

        public Form1()
        {
            InitializeComponent();
        }

        private void Compute_Click(object sender, EventArgs e)
        {            
            seperate = getNumbers.Text.Split(new[] { " " }, StringSplitOptions.None);
            numbers = new int[seperate.Length];
            
            for (int i = 0; i <= numbers.Length - 1; i++)
            {
                numbers[i] = Convert.ToInt32(seperate[i].Trim());
                sum += numbers[i];
            }

            average = sum / numbers.Length;
            result.Text = average.ToString();
        }
    }
}
